<Window x:Class="ExampleCopyUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleCopyUtility"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="fileListBox" Margin="10,10,10,35" Loaded="fileListBox_Loaded" SelectionMode="Multiple"/>
        <Button x:Name="refreshButton" Content="Refresh" HorizontalAlignment="Right" Margin="0,0,106,10" VerticalAlignment="Bottom" Width="60" IsEnabled="False"/>
        <Button x:Name="makeCopyButton" Content="Make Copies" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="91" Click="makeCopyButton_Click"/>

    </Grid>
</Window>
